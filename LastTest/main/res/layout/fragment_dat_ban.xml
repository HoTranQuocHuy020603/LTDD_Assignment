<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagesframe.DatBan"
    android:background="@drawable/gallery1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="-------------- RESERVATION --------------"
        android:textSize="15sp"
        android:textColor="#8C8A8A"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="Book a Table"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FF9800"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:text="********* Choose table you want *********"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#F4F4F4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Vui lòng kiểm tra trạng thái bàn đặt (trạng thái sẽ được cập nhật trong vòng 2 tiếng) "
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#F4F4F4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:background="#BF000000"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Normal Table"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FBFBFB"/>


    <ImageView
        android:layout_width="153dp"
        android:layout_height="111dp"
        android:background="@drawable/gallery3"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="130dp"
        android:text="Cho 1 - 6 người ngồi"
        android:textSize="18sp"
        android:textColor="#8F8F8B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="190dp"
        android:text="Không gian chung, view đẹp, khuyến mãi j đó cho các cặp đôi khi dùng."
        android:textSize="18sp"
        android:textColor="#8F8F8B"/>
    <Button
        android:id="@+id/normal_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="190dp"
        android:text="Book Now"
        android:backgroundTint="#A87A35">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:layout_marginTop="400dp"
        android:background="#DF000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Room Table"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FBFBFB"/>

    <ImageView
        android:layout_width="153dp"
        android:layout_height="111dp"
        android:background="@drawable/gallery5"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="130dp"
        android:text="Cho > 10 người ngồi"
        android:textSize="18sp"
        android:textColor="#8F8F8B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="190dp"
        android:text="Không gian riêng, view đẹp, rộng rãi thoán mát"
        android:textSize="18sp"
        android:textColor="#8F8F8B"/>
    <Button
        android:id="@+id/room_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="190dp"
        android:text="Book Now"
        android:backgroundTint="#A87A35">
    </Button>


</FrameLayout>